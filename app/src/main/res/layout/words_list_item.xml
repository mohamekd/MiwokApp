<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/words_list_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/list_item_icon"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:background="@color/tan_background"
        tools:ignore="ContentDescription" />


    <LinearLayout
        android:id="@+id/textViews_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/list_item_icon">

        <!--            android:layout_marginTop="22dp" -->
        <TextView
            android:id="@+id/miwok_number_tv"
            android:layout_width="250dp"
            android:layout_height="22dp"
            android:gravity="bottom"
            android:textAppearance="?android:textAppearanceMedium"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Miwok number"/>


        <TextView
            android:id="@+id/en_number_tv"
            android:layout_width="250dp"
            android:layout_height="22dp"
            android:layout_marginTop="10dp"
            android:gravity="top"
            android:textAppearance="?android:textAppearanceMedium"
            android:textSize="16sp"
            tools:text="english number" />


    </LinearLayout>

    <ImageView
        android:id="@+id/play_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/play"
        android:layout_marginEnd="16dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="22dp"/>
</RelativeLayout>